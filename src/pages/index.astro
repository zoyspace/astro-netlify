<style>
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .blog_images {
    display: flex;
    flex-wrap: wrap;
  }
  .imageover {
    position: relative;
    width: calc(49.9%);

    gap: 2px;
    padding: 1px;
    /* background-color: palevioletred; */
  }
  img {
    width: calc(99%);
    height: calc(100%);
    object-fit: cover;
    border-radius: 30px;
    margin: 5px;
    transition: transform 1s, border-radius 1s;
  }
  img:hover {
    transform: translate(0.3rem, -0.3rem);
    border-radius: 100px;
  }

  .image-info {
    position: absolute;

    bottom: 25px;
    left: 25px;
  }
  .image-info .name {
    color: hotpink;
    font-size: 1rem;

  }
  .ad1{
      width: 350px; 
      height: 240px;
    }
  
  @media (max-width: 600px) {
    .imageover {
      width: calc(100%);
    }
    img {
      border-radius: 10px;
    }
    img:hover {
      transform: translate(0.2rem, -0.2rem);
      border-radius: 30px;
    }
    .image-info .name {
      font-size: 1rem;
    }

  }

</style>

