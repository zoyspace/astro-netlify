---

<Layout title="坂道IMAGE">
  <a href={nogizaka_blog_url}>
    <h1>
      Welcome to <span class="text-gradient">坂道IMAGE</span>
    </h1>
  </a>

  <dev class="blog_images">
    <a href="https://px.a8.net/svt/ejp?a8mat=3T6DAK+59BV5E+2YVI+60OXD" rel="nofollow">
      <img class="ad1" width="350" height="240" alt="" src="https://www28.a8.net/svt/bgt?aid=230404556318&wid=001&eno=01&mid=s00000013851001011000&mc=1">
    </a>
      <img class="ad2" width="1" height="1" src="https://www19.a8.net/0.gif?a8mat=3T6DAK+59BV5E+2YVI+60OXD" alt="">
    {
      sorted_image_list.map((name_imgurl) => (
        <a class="imageover" href={name_imgurl[3]}>
          <Image
            src={name_imgurl[4]}
            quality="high" 
            alt={group_name + " " + name_imgurl[0]}
            // height={500}
            // width={500}
          />
          <dev class="image-info">
            <h3 class="name">{name_imgurl[0]}</h3>
            <h3 class="date">{name_imgurl[2]}</h3>
          </dev>
        </a>
      ))
    }
  </dev>
</Layout>

<style>
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }

  .blog_images {
    display: flex;
    flex-wrap: wrap;
  }
  .imageover {
    position: relative;
    width: calc(49.9%);

    gap: 2px;
    padding: 1px;
    /* background-color: palevioletred; */
  }
  img {
    width: calc(100%);
    height: calc(100%);
    object-fit: cover;
    border-radius: 30px;
    transition: transform 1s, border-radius 1s;
  }
  img:hover {
    transform: translate(0.3rem, -0.3rem);
    border-radius: 100px;
  }

  .image-info {
    position: absolute;
    bottom: 25px;
    left: 25px;
  }
  .image-info .name {
    color: hotpink;
    font-size: 2rem;
  }
  .ad1{
      width: 350px; 
      height: 240px;
    }
    .ad2{
      width:1px; height:1px;
    }
  @media (max-width: 600px) {
    .imageover {
      width: calc(100%);
    }
    img {
      border-radius: 10px;
    }
    img:hover {
      transform: translate(0.2rem, -0.2rem);
      border-radius: 30px;
    }
    .image-info .name {
      font-size: 1rem;
    }

  }

</style>
